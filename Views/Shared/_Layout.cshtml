<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Home</title>
    @switch (ViewData["Title"])
    {
        case "Home":
                <link rel="stylesheet" href="~/css/home.css" />
            break;

        case "Sobre":
                <link rel="stylesheet" href="~/css/sobre.css" />
            break;

        case "Projetos":
                <link rel="stylesheet" href="~/css/projetos.css" />
            break;

        case "Contato":
                <link rel="stylesheet" href="~/css/contato.css" />
            break;

        default:
            break;
    }

</head>
<header class="content">
    <ul class="contato">
        <li><a target="_blank" href="https://github.com/JoVi0li"><img class="github-img" src="~/img/github.svg" alt=""></a></li>
        <li><a target="_blank" href="https://mail.google.com/mail/u/0/?tab=rm&ogbl#inbox"><img class="email-img" src="~/img/email.svg" alt=""></a></li>
    </ul>

    <nav class="navegacao">
        <ul>
            <li><a href="Home">home</a></li>
            <li><a href="Sobre">sobre</a></li>
            <li><a href="Projetos">projetos</a></li>
            <li><a href="Contato">contato</a></li>
        </ul>
    </nav>
</header>
<body>

        <main class="main content flex-center-bt">
            @RenderBody()
        </main>


    @RenderSection("Scripts", required: false)
</body>
</html>
